<!-- app/views/devise/confirmations/new.html.erb -->
<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center mb-6">Resend confirmation instructions</h2>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), method: :post) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>
      <%= f.submit "Resend confirmation instructions", class: "w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800" %>
    <% end %>
    <div class="text-center mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
