<div class="max-w-md mx-auto bg-white p-8 rounded shadow">
  <h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <% if resource.profile_image.attached? %>
        <div class="mt-2">
          <%= image_tag resource.profile_image, class: "rounded-full w-20 h-20" %>
        </div>
      <% else %>
        <div class="mt-2">
          <img src="https://via.placeholder.com/150" alt="Placeholder image" class="rounded-full w-20 h-20">
        </div>
      <% end %>
      <%= f.label :profile_image, class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :profile_image, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :first_name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :last_name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :username, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-500 mb-4">Currently waiting confirmation
        for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-4">
      <%= f.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :date_of_birth, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>

    <div>
      <%= f.submit "Update", class: "w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800" %>
    </div>
  <% end %>

  <h3 class="text-xl font-bold mt-8 mb-4">Cancel my account</h3>
  <div>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <%= link_to "Back", :back, class: "inline-block mt-4 text-blue-500 hover:text-blue-700" %>
</div>