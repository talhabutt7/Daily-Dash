<!-- app/views/devise/registrations/new.html.erb -->
<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center mb-6">Register</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>

      <div class="mb-6 text-center">
        <div class="relative inline-block">
          <div class="w-32 h-32 rounded-full overflow-hidden bg-gray-200">
            <%= image_tag(resource.profile_image.attached? ? url_for(resource.avatar) : "placeholder.jpg", id: "profile-image", class: "w-full h-full object-cover") %>
          </div>
          <label for="user_avatar" class="absolute bottom-0 right-0 text-white rounded-full p-1 cursor-pointer">
            <svg class="h-8 w-8 text-gray-500"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
            </svg>
          </label>
        </div>
        <%= f.file_field :avatar, id: "user_avatar", class: "hidden" %>
      </div>

      <div class="mb-4">
        <%= f.label :username, class: "block text-gray-700" %>
        <div class="flex">
          <span class="inline-flex items-center px-3 border border-r-0 rounded-l-md bg-gray-50 text-gray-500">@</span>
          <%= f.text_field :username, value: "#{resource.username}", class: "flex-1 block w-full border rounded-none rounded-r-lg focus:ring-green-500 focus:border-green-500" %>
        </div>
      </div>

      <div class="mb-4">
        <%= f.label :first_name, class: "block text-gray-700" %>
        <%= f.text_field :first_name, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :last_name, class: "block text-gray-700" %>
        <%= f.text_field :last_name, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :date_of_birth, class: "block text-gray-700" %>
        <%= f.date_field :date_of_birth, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-4 flex">
        <%= f.check_box :weekly_email, class: "block" %>
        <%= f.label :weekly_email, "Subscribe to weekly posts on email.", class: "block text-sm font-medium text-gray-700 ml-2" %>
      </div>

      <div class="mb-4 flex">
        <%= f.check_box :accept_terms, required: true, class: "mr-1" %>
        <%= f.label :accept_terms, "Accept terms and conditions", class: "block text-sm font-medium text-gray-700 ml-2" %>
      </div>

      <%= f.submit "Register", class: "w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800" %>
    <% end %>

    <div class="text-center mt-6">
      <p class="text-gray-600">or continue with</p>
      <div class="flex justify-center space-x-4 mt-2">
        <%= link_to "#", class: "bg-gray-200 p-2 rounded-full" do %>
          <%#= image_tag "google_icon.svg", width: "24", height: "24" %>
        <% end %>
        <%= link_to "#", class: "bg-gray-200 p-2 rounded-full" do %>
          <%#= image_tag "apple_icon.svg", width: "24", height: "24" %>
        <% end %>
        <%= link_to "#", class: "bg-gray-200 p-2 rounded-full" do %>
          <%#= image_tag "facebook_icon.svg", width: "24", height: "24" %>
        <% end %>
      </div>
    </div>

    <div class="text-center mt-6">
      <p class="text-gray-600">Already a member? <%= link_to "Login", new_session_path(resource_name), class: "text-green-500 hover:underline" %></p>
    </div>
  </div>
</div>
