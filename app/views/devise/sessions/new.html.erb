<!-- app/views/devise/sessions/new.html.erb -->
<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center mb-6">Welcome back!</h2>
    <p class="text-center text-gray-600 mb-6">Simplify your workflow and boost your productivity with Tuga's App. Get started for free.</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<!--      <div class="flex items-center mb-4">-->
        <%#= f.label :email_or_username, class: "block text-gray-700" %>
        <%#= f.text_field :email_or_username, autofocus: true, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
<!--      </div>-->

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>
      <div class="flex items-center justify-between mb-6">
        <div>
          <%= f.check_box :remember_me, class: "mr-1" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: "text-sm text-green-500 hover:underline" %>
      </div>
      <%= f.submit "Login", class: "w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800" %>
    <% end %>
    <div class="text-center mt-6">
      <p class="text-gray-600">or continue with</p>
      <div class="flex justify-center space-x-4 mt-2">
        <%= link_to "#", class: "bg-gray-200 p-2 rounded-full" do %>
          <%#= image_tag "google_icon.svg", width: "24", height: "24" %>
        <% end %>
        <%= link_to "#", class: "bg-gray-200 p-2 rounded-full" do %>
          <%#= image_tag "apple_icon.svg", width: "24", height: "24" %>
        <% end %>
        <%= link_to "#", class: "bg-gray-200 p-2 rounded-full" do %>
          <%#= image_tag "facebook_icon.svg", width: "24", height: "24" %>
        <% end %>
      </div>
    </div>
    <div class="text-center mt-6">
      <p class="text-gray-600">Not a member? <%= link_to "Register now", new_registration_path(resource_name), class: "text-green-500 hover:underline" %></p>
    </div>
  </div>
</div>
