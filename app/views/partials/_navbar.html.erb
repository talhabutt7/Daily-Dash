<div class="m-6 flex space-x-4">
  <%= link_to "HOME", root_path, class: "text-blue-500 hover:text-blue-700" %>
  <% if user_signed_in? %>
    <%= link_to "Profile", edit_user_registration_path, class: "text-blue-500 hover:text-blue-700" %>
    <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  <% else %>
    <%= link_to "Log in", new_user_session_path, class: "text-blue-500 hover:text-blue-700" %>
    <%= link_to "Sign up", new_user_registration_path, class: "text-green-500 hover:text-green-700" %>
  <% end %>
</div>
