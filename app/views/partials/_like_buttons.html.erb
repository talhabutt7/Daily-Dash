<!-- app/views/blog_posts/_like_buttons.html.erb -->

<div id="blog_post_<%= blog_post.id %>">
  <div class="flex items-center mt-4">
    <%= button_to blog_post.likes.exists?(user_id: current_user.id) ? 'Unlike' : 'Like', blog_post.likes.exists?(user_id: current_user.id) ? unlike_blog_post_path(blog_post) : like_blog_post_path(blog_post), method: :post, remote: true, class: "inline-flex justify-center py-1 px-3 border border-transparent shadow-sm text-sm font-medium rounded-md text-white #{blog_post.likes.exists?(user_id: current_user.id) ? 'bg-red-600 hover:bg-red-700' : 'bg-indigo-600 hover:bg-indigo-700'} focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <span class="ml-2 text-gray-700"><%= blog_post.likes.count %> likes</span>
  </div>
</div>
