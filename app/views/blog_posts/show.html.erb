<div class="p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @blog_post.title %></h1>
<!--  <div class="text-gray-700 leading-relaxed mb-6">-->
    <%#= @blog_post.content %>
<!--  </div>-->
  <div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg p-6 mb-4">
      <p class="text-gray-700 mb-4">
        <strong class="block text-xl font-semibold mb-2">Author:</strong>
        <%#= @blog_post.user.name %>
      </p>
      <p class="text-gray-700 mb-4">
        <strong class="block text-xl font-semibold mb-2">Title:</strong>
        <%= @blog_post.title %>
      </p>
      <p class="text-gray-700">
        <strong class="block text-xl font-semibold mb-2">Content:</strong>
        <%= @blog_post.content %>
      </p>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <% if user_signed_in? %>
      <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>
</div>
