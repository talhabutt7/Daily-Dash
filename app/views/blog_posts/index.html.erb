<div class="mb-6">
  <% if user_signed_in? %>
    <%= link_to "New Post", new_blog_post_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>

<h1 class="text-4xl font-bold mb-6">Blogs</h1>

<div class="space-y-6">
  <% @blog_posts.each do |blog_post| %>
    <div class="p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
      <h2 class="text-2xl font-semibold mb-2">
        <%= link_to blog_post.title, blog_post, class: "text-blue-600 hover:underline" %>
      </h2>
      <div class="mb-4 text-sm text-gray-500">
        <% if blog_post.draft? %>
          <span class="inline-block px-2 py-1 rounded bg-yellow-100 text-yellow-700">Draft</span>
        <% elsif blog_post.scheduled? %>
          <span class="inline-block px-2 py-1 rounded bg-blue-100 text-blue-700">Scheduled</span>
        <% elsif blog_post.published? %>
          <span class="inline-block px-2 py-1 rounded bg-green-100 text-green-700">Published</span>
        <% end %>
      </div>
      <div class="text-gray-700 leading-relaxed">
        <%= simple_format blog_post.content, class: "text-gray-700" %>
      </div>
    </div>
  <% end %>
</div>
