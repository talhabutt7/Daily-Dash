<div>
  <% if user_signed_in? %>
    <%= link_to "NEW", new_blog_post_path %>
  <% end %>
</div>
<h1>Hello</h1>

<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% elsif blog_post.scheduled? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Scheduled</div>
    <% elsif blog_post.published? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Published</div>
    <% end %>
    <%= blog_post.content %>
  </div>
<% end %>