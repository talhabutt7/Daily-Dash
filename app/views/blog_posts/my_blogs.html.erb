<section class="py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="font-manrope text-4xl font-bold text-gray-900 text-center mb-16">My Blogs</h2>
    <% if user_signed_in? %>
      <div class="mb-8 text-center">
        <%= link_to "New Post", new_blog_post_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105" %>
      </div>
    <% end %>
    <div class="flex justify-center gap-y-8 lg:gap-y-0 flex-wrap md:flex-wrap lg:flex-nowrap lg:flex-row lg:justify-between lg:gap-x-8">
      <% @blog_posts.each do |blog_post| %>
        <div class="group w-full max-lg:max-w-xl lg:w-1/3 border border-gray-300 rounded-2xl">
          <div class="flex items-center">
            <% if blog_post.image.attached? %>
              <%= image_tag blog_post.image, class: "rounded-t-2xl w-full" %>
            <% else %>
              <img src="https://via.placeholder.com/300x200" alt="Blog image" class="rounded-t-2xl w-full">
            <% end %>
          </div>
          <div class="p-4 lg:p-6 transition-all duration-300 rounded-b-2xl group-hover:bg-gray-50">
            <span class="text-indigo-600 font-medium mb-3 block"><%= blog_post.created_at.strftime("%b %d, %Y") %></span>
            <h4 class="text-xl text-gray-900 font-medium leading-8 mb-5"><%= link_to blog_post.title, blog_post, class: "hover:underline" %></h4>
            <%= link_to "Read more..", blog_post, class: "cursor-pointer text-lg text-indigo-600 font-semibold" %>
            <div>
              <% if blog_post.draft? %>
                <span class="inline-block px-2 py-1 rounded bg-yellow-100 text-yellow-700">Draft</span>
              <% elsif blog_post.scheduled? %>
                <span class="inline-block px-2 py-1 rounded bg-blue-100 text-blue-700">Scheduled</span>
              <% elsif blog_post.published? %>
                <span class="inline-block px-2 py-1 rounded bg-green-100 text-green-700">Published</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

